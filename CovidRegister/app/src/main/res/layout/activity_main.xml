<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:layout_above="@+id/buttonCadastrar"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/buttonCadastrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cadastrar"
        android:layout_centerInParent="true"/>

    <Button
        android:id="@+id/buttonResults"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Visualizar Mapeamento"
        android:layout_below="@+id/buttonCadastrar"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cadastro de pessoas para mapeamento de COVID-19"
        android:layout_above="@id/buttonCadastrar"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="200dp"/>

    <TextView
        android:id="@+id/textViewCPF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Insira o CPF para login:"
        android:layout_above="@+id/buttonLogin"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="15dp"/>

    <EditText
        android:id="@+id/editTextCPF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_above="@+id/buttonLogin"
        android:layout_marginLeft="180dp"/>
</RelativeLayout>