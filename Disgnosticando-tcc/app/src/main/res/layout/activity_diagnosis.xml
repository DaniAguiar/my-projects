<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.DiagnosisResult">

    <TextView
        android:id="@+id/textViewDiagnosisDescription"
        android:layout_width="348dp"
        android:layout_height="42dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:text="Segundo as respostas anteriores, foram listados estes possíveis diagnósticos: "
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <ListView
        android:id="@+id/listViewDiagnosis"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textViewDiagnosisDescription" />
</RelativeLayout>